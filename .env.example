# Polyglott Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# Audio Configuration
# =============================================================================

# Audio sample rate in Hz (default: 16000)
# POLYGLOTT_AUDIO_SAMPLE_RATE=16000

# Seconds of silence before considering speech ended (default: 1.5)
# POLYGLOTT_SILENCE_TIMEOUT=1.5

# =============================================================================
# Voice Activity Detection (VAD)
# =============================================================================

# VAD backend: silero (PyTorch) or ten_vad (ONNX, lower latency)
# POLYGLOTT_VAD_BACKEND=silero

# Speech detection threshold 0.0-1.0 (default: 0.5)
# POLYGLOTT_VAD_THRESHOLD=0.5

# =============================================================================
# Speech-to-Text (STT)
# =============================================================================

# STT backend: moonshine (fast, ONNX) or whisper_mlx (macOS only)
# POLYGLOTT_STT_BACKEND=moonshine

# Model size: tiny (faster) or base (more accurate)
# POLYGLOTT_STT_MODEL_SIZE=base

# =============================================================================
# Text-to-Speech (TTS)
# =============================================================================

# TTS backend: kokoro (most languages) or piper (German)
# POLYGLOTT_TTS_BACKEND=kokoro

# Speech speed: 0.5-2.0, where 1.0 is normal (default: 0.9)
# POLYGLOTT_TTS_SPEED=0.9

# =============================================================================
# Language Model (LLM)
# =============================================================================

# Ollama model name
POLYGLOTT_LLM_MODEL=qwen2.5:7b

# Response creativity: 0.0 (focused) to 1.0 (creative)
# POLYGLOTT_LLM_TEMPERATURE=0.7

# Maximum tokens per response
# POLYGLOTT_LLM_MAX_TOKENS=256

# Request timeout in seconds
# POLYGLOTT_LLM_TIMEOUT=30.0

# Conversation history length (number of turns to remember)
# POLYGLOTT_LLM_MAX_HISTORY=20

# =============================================================================
# Conversation Features
# =============================================================================

# Enable barge-in: Allow users to interrupt the tutor mid-speech
POLYGLOTT_ENABLE_BARGE_IN=true

# Enable AI follow-ups: Tutor prompts silent users to engage
POLYGLOTT_ENABLE_FOLLOWUPS=true

# Follow-up timeout tiers (seconds of silence before each tier)
# Tier 1: Gentle check-in
# POLYGLOTT_FOLLOWUP_TIER1_TIMEOUT=10.0

# Tier 2: Encouraging prompt
# POLYGLOTT_FOLLOWUP_TIER2_TIMEOUT=20.0

# Tier 3: Re-engagement activity
# POLYGLOTT_FOLLOWUP_TIER3_TIMEOUT=30.0
